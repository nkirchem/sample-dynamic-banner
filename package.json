{
  "scripts": {
    "build": "npm run compile",
    "build:prod": "npm run compile:prod",
    "clean-dist": "rimraf ./dist",
    "compile": "npm run clean-dist && webpack --config webpack.dev.js",
    "compile:prod": "npm run clean-dist && webpack --config webpack.prod.js",
    "prep": "cpx \"./src/Pages/**/*.html\" ./dist/",
    "postbuild": "npm run package",
    "postbuild:prod": "npm run package",
    "package": "npm run prep && tfx extension create --rev-version --manifest-globs extension.json src/Pages/**/*.json",
    "gallery-publish": "tfx extension publish",
    "clean": "rimraf ./dist && rimraf ./*.vsix"
  },
  "dependencies": {
    "azure-devops-extension-sdk": "~2.0.1",
    "azure-devops-extension-api": "~0.141.15",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "vss-ui": "~4.142.1"
  },
  "devDependencies": {
    "@types/react": "^16.3.2",
    "@types/react-dom": "^16.0.7",
    "base64-inline-loader": "^1.1.1",
    "cpx": "~1.5.0",
    "css-loader": "~1.0.0",
    "file-loader": "~2.0.0",
    "node-sass": "~4.9.4",
    "rimraf": "~2.6.2",
    "sass-loader": "~7.1.0",
    "style-loader": "~0.23.1",
    "tfx-cli": "^0.6.3",
    "ts-loader": "~5.2.2",
    "typescript": "^2.9.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  }
}
